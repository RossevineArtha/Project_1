<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rossevine.project_1.LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="318dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/txtEmail_LoginActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_marginTop="@dimen/activity_spasi_margin"
                android:ems="10"
                android:hint="@string/kataemail"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtPassword_LoginActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:ems="10"
                android:hint="@string/kataPassword"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnLogin_LoginActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:text="@string/kataLogin" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
