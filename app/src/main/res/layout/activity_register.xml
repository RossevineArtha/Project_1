<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.rossevine.project_mobile_1.RegisterActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText

                android:id="@+id/txtName_Registrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_marginTop="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/katanama"
                android:inputType="textPersonName"
                android:textSize="@dimen/tulisanSemua" />

            <EditText
                android:id="@+id/txtEmail_Registrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_marginTop="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/kataemail"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/tulisanSemua" />

            <EditText
                android:id="@+id/txtPassword_Registrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_marginTop="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/kataPassword"
                android:inputType="textPassword"
                android:textSize="@dimen/tulisanSemua" />

            <EditText
                android:id="@+id/txtRePassword_Registrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_marginTop="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/kataRePassword"
                android:inputType="textPassword"
                android:textSize="@dimen/tulisanSemua" />

            <Button
                android:id="@+id/btnRegistrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:text="@string/registrasi" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
