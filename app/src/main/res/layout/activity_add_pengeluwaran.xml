<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rossevine.project_mobile_1.AddPengeluwaranActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:text="@string/kataPengeluaran"
                android:textSize="@dimen/tulisanTotal" />

            <EditText
                android:id="@+id/editTextDate_Pengeluwaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/KataKategori"
                    android:textSize="@dimen/tulisanSemua" />

                <Spinner
                    android:id="@+id/spinnerCategory_Pengeluwaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:text="@string/kataJudul"
                    android:textSize="@dimen/tulisanSemua" />

                <EditText
                    android:id="@+id/editTextJudul_Pengeluwaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_spasi_margin"
                android:layout_marginEnd="@dimen/activity_spasi_margin"
                android:layout_marginStart="@dimen/activity_spasi_margin">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="@string/kataJumlah"
                    android:textSize="@dimen/tulisanSemua" />

                <EditText
                    android:id="@+id/editTextJumlah_Pengeluwaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned" />

            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
